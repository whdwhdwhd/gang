/* pages/order/order.wxss */
.navbar {
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width: 100%;
    
}
.order-list{
  position: absolute;
  top: 68rpx;
  width: 100%;
  background: #fff;
}
.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    text-align: center;
    font-size: 0;
    height:70rpx;
    background: #fff;
    padding-top:10rpx;
}

.navbar__on view{
  border-radius:28rpx;
  box-shadow:0px 0px 3px #BDBDBD;
}
.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 0;
    bottom: 0;
    height: 3px;
    background-color: #16B13A;
    transition: transform .3s;
}

.navbar__title{
    display: inline-block;
    font-size: 15px;
    text-align: center;
    width:136rpx;
    line-height:60rpx;
    background: #fff;
}

swiper {
  height: 100%;
}

swiper-item{
  width: 100%;
  box-sizing: border-box;
}
swiper-item .scroll-item{
  height: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.orderList{
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin-top: 40rpx;
  border: 2rpx solid #dedede;
  line-height:64rpx;
  border-radius:8rpx;
  background: #fff;
}
.orderList-shopName{
  font-size:32rpx;
}
.orderList-status,.orderList-cont-reserMoney,.orderList-cont-btn button{
  float: right;
}
.orderList-cont-btn{
  height:70rpx;
}