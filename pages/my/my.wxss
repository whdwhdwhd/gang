/* pages/my/my.wxss */
.my-top{
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #fff
}
.my-top-cont{
  position: relative;
  height:400rpx;
}
.my-top-cont-mT{
  position: absolute;
  top: 300rpx;
  background: #fff;
  width:100%;
  height:100rpx;
}
.my-top-cont-poa{
  position: absolute;
  top: 0;
  left:50%;
  transform: translateX(-50%);
  width: 90%;
  margin: 0 auto;
  background: #fff;
  height: 300rpx;
}
.my-top-cont-poa-img{
  width:120rpx;
  height:120rpx;
  border-radius:60rpx;
  overflow:hidden;
  margin:40rpx auto 0;
}
.my-top-cont-poa-name{
  margin-top: 20rpx;
  text-align: center;
}
.my-top-cont-poa-greeting{
  margin-top: 20rpx;
  text-align: center;
}
.my-top-cont-poa-img image{
  display: block;
  width: 100%;
  height: 100%;
}
.my-cont{
  padding: 40rpx 20rpx 0 20rpx;
  background: #fff;
}
.my-cont>navigator,.my-cont>view{
  position:relative;
  line-height:80rpx;
  padding-left:20rpx;
  border-bottom:1px dashed #dedede;
}
.my-cont>view{
  height:80rpx;
}
.my-cont form button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  padding: 0;
}
.my-cont form button::after{
  content: '';
  display: none;
}
.wb_arrow{
  position: absolute;
  right: 12rpx;
  top: 27rpx;
  display: inline-block;
  border-right: 2px solid #dedede;
  border-top: 2px solid #dedede;
  height: 8px;
  width: 8px;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  /*不加这两个属性三角会比上一个略丑, 大家可以试一下*/
  border-left: 2px solid transparent;
  border-bottom: 2px solid transparent;
}