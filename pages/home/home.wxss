/* pages/home/home.wxss */
.home{

}
.home-Advertisement{
  height: 300rpx;
}
.home-Advertisement>swiper image{
  width: 100%;
  height:100%;
}
.title{
  text-align: center;
  padding: 20rpx 0;
}
.title text{
  font-size: 34rpx;
  font-weight: bolder;
  padding-bottom: 16rpx;
}
.home-productList{
  padding: 0 40rpx;
}
.home-productList-list>image{
  width: 100%;
  height:300rpx;
  display:block;
}
.home-productList-list{
  line-height: 80rpx;
  margin-top: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.home-productList-list>view{
  background: #fff
}
.home-productList-list-tit{
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: bold;
  padding-left:20rpx;
  padding-top: 10rpx;
}
.home-productList-list-ip{
  line-height: 40rpx;
  padding-bottom: 10rpx;
  color:#7A7A7A;
  padding-left:20rpx;
}
.home-productList-list-ip-icon{
  padding-right: 10rpx;
  width: 24rpx;
  height:24rpx;
  display: inline-block;
}