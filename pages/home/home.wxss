/* 弹窗 */
.formIdDom{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}
.formIdDom-open{
  position: absolute;
  background: #fff;
  left: 50%;
  top: 50%;
  padding: 40rpx 40rpx 20rpx 40rpx;
  border-radius: 8rpx;
  transform: translate(-50%,-50%);
  width: 500rpx;
}
.formIdDom-open text{
  line-height: 40rpx;
}
.formIdDom-open-btn{
  position: relative;
  height: 80rpx;
}
.formIdDom-open-btn button{
  background: none;
}
